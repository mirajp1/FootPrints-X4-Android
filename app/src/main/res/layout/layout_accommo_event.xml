<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background">

    <!-- symbols used 
    
    	_l means layout idn
    	_icon means icon for that box
    	_h means textview of header of box
    	_d means the divider
    	_i means the textview of the information of that box
    
    	
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <RelativeLayout
            android:id="@+id/photo_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/photo"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"

                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/duration_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_below="@id/photo_l"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/duration_icon"
                android:src="@drawable/date_venue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp" />


            <TextView
                style="@style/InfoHeader"
                android:id="@+id/duration_h"
                android:text="@string/duration"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/duration_icon" />


            <View
                android:id="@+id/duration_d"
                android:layout_below="@id/duration_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40111111"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                style="@style/InfoData"
                android:id="@+id/duration_i"
                android:layout_below="@id/duration_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fees_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_below="@id/duration_l"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/fees_icon"
                android:src="@drawable/fees"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp" />


            <TextView
                style="@style/InfoHeader"
                android:id="@+id/fees_h"
                android:text="@string/fees"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/fees_icon" />


            <View
                android:id="@+id/fees_d"
                android:layout_below="@id/fees_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40111111"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                style="@style/InfoData"
                android:id="@+id/fees_i"
                android:layout_below="@id/fees_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/address_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_below="@id/fees_l"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/address_icon"
                android:src="@drawable/map_b"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp" />


            <TextView
                style="@style/InfoHeader"
                android:id="@+id/address_h"
                android:text="@string/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/address_icon" />


            <View
                android:id="@+id/address_d"
                android:layout_below="@id/address_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40111111"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                style="@style/InfoData"
                android:id="@+id/address_i"
                android:layout_below="@id/address_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/details_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_below="@id/address_l"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/details_icon"
                android:src="@drawable/specs"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp" />


            <TextView
                style="@style/InfoHeader"
                android:id="@+id/details_h"
                android:text="@string/details"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/details_icon" />


            <View
                android:id="@+id/details_d"
                android:layout_below="@id/details_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40111111"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                style="@style/InfoData"
                android:id="@+id/details_i"
                android:layout_below="@id/details_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rules_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_below="@id/details_l"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/rules_icon"
                android:src="@drawable/rules"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp" />


            <TextView
                style="@style/InfoHeader"
                android:id="@+id/rules_h"
                android:text="@string/rules"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/rules_icon" />


            <View
                android:id="@+id/rules_d"
                android:layout_below="@id/rules_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40111111"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                style="@style/InfoData"
                android:id="@+id/rules_i"
                android:layout_below="@id/rules_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/termsncondi_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_below="@id/rules_l"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/termsncondi_icon"
                android:src="@drawable/specs"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp" />


            <TextView
                style="@style/InfoHeader"
                android:id="@+id/termsncondi_h"
                android:text="@string/termsncondi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/termsncondi_icon" />


            <View
                android:id="@+id/termsncondi_d"
                android:layout_below="@id/termsncondi_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40111111"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                style="@style/InfoData"
                android:id="@+id/termsncondi_i"
                android:layout_below="@id/termsncondi_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/event_inchr_l"
            android:layout_below="@id/termsncondi_l"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/bg_card"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:id="@+id/event_inchr_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/event_inchr_icon"
                    android:src="@drawable/event_inchr"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="13dp" />


                <TextView
                    style="@style/InfoHeader"
                    android:id="@+id/event_inchr_h"
                    android:text="@string/event_inchr"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/event_inchr_icon" />


                <View
                    android:id="@+id/event_inchr_d"
                    android:layout_below="@id/event_inchr_icon"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#40111111"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_inchr_header"
                android:paddingLeft="1dp"
                android:paddingRight="1dp">

                <RelativeLayout
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/inchr_name_icon_1"
                        android:src="@drawable/event_inchr_name"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="10dp" />

                    <TextView
                        style="@style/InfoData.EventInchargeData"
                        android:id="@+id/inchr_name_text_1"
                        android:layout_toRightOf="@id/inchr_name_icon_1"
                        android:layout_height="35dp"
                        android:layout_width="match_parent" />

                    <ImageView
                        android:id="@+id/inchr_num_icon_1"
                        android:layout_below="@id/inchr_name_icon_1"
                        android:src="@drawable/phone"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="10dp" />

                    <TextView
                        style="@style/InfoData.EventInchargeData.Num"
                        android:id="@+id/inchr_num_text_1"
                        android:layout_toRightOf="@id/inchr_num_icon_1"
                        android:layout_below="@id/inchr_name_text_1"
                        android:layout_height="35dp"
                        android:layout_width="match_parent" />

                    <ImageView
                        android:id="@+id/inchr_email_icon_1"
                        android:layout_below="@id/inchr_num_icon_1"
                        android:src="@drawable/email"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="10dp" />

                    <TextView
                        style="@style/InfoData.EventInchargeData"
                        android:id="@+id/inchr_email_text_1"
                        android:layout_toRightOf="@id/inchr_email_icon_1"
                        android:layout_below="@id/inchr_num_text_1"
                        android:layout_height="35dp"
                        android:layout_width="match_parent"
                        android:text="@string/email_me" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/inchr_name_icon_2"
                        android:src="@drawable/event_inchr_name"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="10dp" />

                    <TextView
                        style="@style/InfoData.EventInchargeData"
                        android:id="@+id/inchr_name_text_2"
                        android:layout_toRightOf="@id/inchr_name_icon_2"
                        android:layout_height="35dp"
                        android:layout_width="match_parent" />

                    <ImageView
                        android:id="@+id/inchr_num_icon_2"
                        android:layout_below="@id/inchr_name_icon_2"
                        android:src="@drawable/phone"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="10dp" />

                    <TextView

                        style="@style/InfoData.EventInchargeData.Num"
                        android:id="@+id/inchr_num_text_2"
                        android:layout_toRightOf="@id/inchr_num_icon_2"
                        android:layout_below="@id/inchr_name_text_2"
                        android:layout_height="35dp"
                        android:layout_width="match_parent" />

                    <ImageView
                        android:id="@+id/inchr_email_icon_2"
                        android:layout_below="@id/inchr_num_icon_2"
                        android:src="@drawable/email"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="10dp" />

                    <TextView
                        style="@style/InfoData.EventInchargeData"
                        android:id="@+id/inchr_email_text_2"
                        android:layout_toRightOf="@id/inchr_email_icon_2"
                        android:layout_below="@id/inchr_num_text_2"
                        android:layout_height="35dp"
                        android:layout_width="match_parent"
                        android:text="@string/email_me" />


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>