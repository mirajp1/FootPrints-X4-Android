<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <RelativeLayout
            android:id="@+id/rounds_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card">


            <ImageView
                android:id="@+id/rounds_icon"
                android:src="@drawable/rounds"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp" />


            <TextView
                style="@style/InfoHeader"
                android:id="@+id/rounds_h"
                android:text="@string/rounds"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/rounds_icon" />


            <View
                android:id="@+id/rounds_d"
                android:layout_below="@id/rounds_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40111111"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                style="@style/InfoData"
                android:id="@+id/rounds_i"
                android:layout_below="@id/rounds_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/judg_crit_l"
            android:layout_below="@id/rounds_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_card">


            <ImageView
                android:id="@+id/judg_crit_icon"
                android:src="@drawable/judg_crit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp" />


            <TextView
                style="@style/InfoHeader"
                android:id="@+id/judg_crit_h"
                android:text="@string/judg_crit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/judg_crit_icon" />


            <View
                android:id="@+id/judg_crit_d"
                android:layout_below="@id/judg_crit_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40111111"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                style="@style/InfoData"
                android:id="@+id/judg_crit_i"
                android:layout_below="@id/judg_crit_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/abstract_l"
            android:layout_below="@id/judg_crit_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_card">


            <ImageView
                android:id="@+id/abstract_icon"
                android:src="@drawable/specs"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp" />


            <TextView
                style="@style/InfoHeader"
                android:id="@+id/abstract_h"
                android:text="@string/abstractd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/abstract_icon" />


            <View
                android:id="@+id/abstract_d"
                android:layout_below="@id/abstract_icon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40111111"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                style="@style/InfoData"
                android:id="@+id/abstract_i"
                android:layout_below="@id/abstract_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>